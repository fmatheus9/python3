x = int(input('Digite um número: '))
u = x//1 % 10
d = x//10 % 10
c = x//100 % 10
m = x//1000 % 10
print(f'Unidade: {u}')
print(f'Dezena: {d}')
print(f'Centena: {c}')
print(f'Milhar: {m}')

numero = str(input('Digite um número de 0 a 9999: '))
numero.split()
print(f'Unidade: {numero[3]}')
print(f'Dezena: {numero[2]}')
print(f'Centena: {numero[1]}')
print(f'Milhar: {numero[0]}')
